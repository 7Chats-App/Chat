<script>
  
    $("#upload").click(function ()
    {
        var AccountDetail = new Object();
        AccountDetail.Birthday = $('#birth').val();
        AccountDetail.LastName = $('#surname').val();
        AccountDetail.Gender = $('#gender').val();
        AccountDetail.showme = $('#showme').val();
        AccountDetail.Province = $('#province').val();
        AccountDetail.City = $('#city').val();



        if (AccountDetail.LastName == "") {
            toastr.warning("Please enter surname");
            return false;
        }
        if (AccountDetail.Birthday == "") {
            toastr.warning("Please enter birthday");
            return false;
        }

        if (AccountDetail.City == "") {
            toastr.warning("Please enter town");
            return false;
        }

        if (AccountDetail != null)
        {
                    toastr.info("Saving.........");
                    $.ajax({
                        type: "POST",
                        url: "@(Url.Action("Complete", "Home"))",
                        data: JSON.stringify(AccountDetail),
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        success: function (response)
                        {
                            if (response == "successful")
                            {
                                toastr.clear();
                                toastr.success("successfully");
                                window.location.href = "@(Url.Action("UploadImages", "Home"))";
                            }
                            else
                            {
                                toastr.clear();
                                toastr.warning(response);
                            }
                        },
                        failure: function (response)
                        {
                            toastr.clear();
                            toastr.warning(response.responseText);
                        },
                        error: function (response) {
                            toastr.clear();
                            toastr.warning(response.responseText);
                        }
                    });
                }
            });
</script>